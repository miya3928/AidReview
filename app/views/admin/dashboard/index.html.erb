<div class="container mt-5">
  <div class="text-center mb-4">
    <h1 class="display-4 font-weight-bold">管理者ダッシュボード</h1>
  </div>
  
  <div class="row text-center">
    <div class="col-md-4 mb-4">
      <div class="card bg-primary text-white shadow-lg border-0 rounded-lg">
        <div class="card-body">
          <h5 class="card-title font-weight-bold">登録ユーザー数</h5>
          <p class="display-3 font-weight-bold"><%= @users.count %>人</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card bg-success text-white shadow-lg border-0 rounded-lg">
        <div class="card-body">
          <h5 class="card-title font-weight-bold">投稿数</h5>
          <p class="display-3 font-weight-bold"><%= @posts.count %>件</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card bg-warning text-dark shadow-lg border-0 rounded-lg">
        <div class="card-body">
          <h5 class="card-title font-weight-bold">投稿レビュー数</h5>
          <p class="display-3 font-weight-bold"><%= @reviews.count %>件</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="text-center mt-5">
    <%= link_to "ユーザー管理", admin_users_path, class: "btn btn-lg btn-outline-primary mx-3 shadow-lg rounded-pill" %>
    <%= link_to "投稿管理", admin_posts_path, class: "btn btn-lg btn-outline-success mx-3 shadow-lg rounded-pill" %>
    <%= link_to "レビュー管理", admin_reviews_path, class: "btn btn-lg btn-outline-warning mx-3 shadow-lg rounded-pill" %>
  </div>
</div>