<div class="container mt-5">
  <div class="text-center mb-4">
    <h1>管理者ダッシュボード</h1>
  </div>
  
  <div class="row text-center text-white">
    <div class="col-md-4">
      <div class="card bg-primary text-white mb-4">
        <div class="card-body">
          <h5>登録ユーザー数</h5>
          <p class="display-4"><%= @users.count %>人</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-success text-white mb-4">
        <div class="card-body">
          <h5>投稿数</h5>
          <p class="display-4"><%= @posts.count %>件</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-warning text-dark mb-4">
        <div class="card-body">
          <h5>投稿レビュー数</h5>
          <p class="display-4"><%= @reviews.count %>件</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="text-center mt-4">
    <%= link_to "ユーザー管理", admin_users_path, class: "btn btn-primary btn-lg mx-2" %>
    <%= link_to "投稿管理", admin_posts_path, class: "btn btn-success btn-lg mx-2" %>
    <%= link_to "レビュー管理", admin_reviews_path, class: "btn btn-warning btn-lg mx-2" %>
  </div>
</div>