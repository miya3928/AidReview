<h1 class="display-4 font-weight-bold text-center mb-4">投稿管理</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover table-bordered shadow-lg rounded-lg">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>作成者</th>
        <th>作成日時</th>
        <th>投稿タイプ</th>
        <th>アクション</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr class="align-middle">
          <td><%= post.id %></td>
          <td><%= link_to post.title, admin_post_path(post), class: "text-primary font-weight-bold" %></td>
          <td><%= post.user.name %></td>
          <td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= post.postable_type %></td>
          <td>
            <%= button_to "削除", admin_post_path(post), method: :delete, class: "btn btn-danger btn-sm shadow-sm rounded-pill", data: { confirm: "本当に削除しますか？" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>