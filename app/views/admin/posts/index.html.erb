<h1>投稿管理</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to post.title, admin_post_path(post) %></td>
        <td><%= post.user.name %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= button_to "削除", admin_post_path(post), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
