<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="input-group">
    <%= f.select :search_type, options_for_select([['ユーザー', 'users'], ['投稿', 'posts']]), {}, class: 'form-control' %>
    <%= f.text_field :search_query, placeholder: '検索...', class: 'form-control' %>
    <%= f.submit '検索', class: 'btn btn-primary' %>
  </div>
<% end %>